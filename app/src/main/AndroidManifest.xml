<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyAppDeComida"
        tools:targetApi="31">

        <activity
            android:name=".actividades.ComidaActivity"
            android:exported="false" />
        <activity
            android:name=".pedidos.PedidosActivity"
            android:exported="false" />
        <activity
            android:name=".actividades.ActivityProfile"
            android:exported="false" />
        <activity
            android:name=".actividades.ActivityFavoritos"
            android:exported="false" />
        <activity
            android:name=".actividades.ActivityPedido"
            android:exported="false" />
        <activity
            android:name=".NavBar"
            android:exported="false" />
        <activity
            android:name=".CustomNavBar"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".actividades.ActivitySignUp" />
        <activity android:name=".actividades.ActivityRecover" />
        <activity android:name=".actividades.ActivityMenu" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>