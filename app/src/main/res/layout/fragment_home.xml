<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Home">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingTop="0dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp"
        android:background="#F8C595"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:background="@drawable/border"
            android:padding="10dp">

            <ImageView
                android:id="@+id/user_icon"
                android:layout_width="51dp"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:src="@drawable/ic_baseline_person_24" />

            <TextView
                android:layout_width="262dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="Bienvenido, Luis"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <com.google.android.material.button.MaterialButton
    android:id="@+id/btn_cart"
    android:layout_width="36dp"
    android:layout_height="36dp"
    android:background="@drawable/ic_shopping"
    app:backgroundTint="@null"
    android:gravity="center_horizontal"
    android:padding="3dp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="57dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/abril_fatface"
            android:text="Listo para ordenar?"
            android:textColor="@color/colorLetra1"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/imagen_menu"
            android:layout_width="291dp"
            android:layout_height="177dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_outline"
            android:clipToOutline="true"
            android:src="@drawable/foodtime" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/abril_fatface"
            android:text="CategorÃ­as de comida"
            android:textColor="@color/colorLetra1"
            android:textSize="16dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingLeft="8dp"
            android:paddingRight="6dp">

            <ImageView
                android:id="@+id/desayuno"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/circular_image"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:src="@drawable/breakfast_svgrepo_com" />

            <ImageView
                android:id="@+id/almuerzos"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/circular_image"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:src="@drawable/almuerzo" />

            <ImageView
                android:id="@+id/cenas"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/circular_image"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:src="@drawable/cena" />

            <ImageView
                android:id="@+id/snacks"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/circular_image"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:src="@drawable/snacks" />

            <ImageView
                android:id="@+id/bebidas"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/circular_image"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:src="@drawable/bebidas" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:text="Desayunos"
                android:textColor="@color/colorLetra1"
                android:textSize="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:text="Almuerzos"
                android:textColor="@color/colorLetra1"
                android:textSize="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:text="Cenas"
                android:textColor="@color/colorLetra1"
                android:textSize="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="33dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:text="Snacks"
                android:textColor="@color/colorLetra1"
                android:textSize="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:text="Bebidas"
                android:textColor="@color/colorLetra1"
                android:textSize="12dp" />

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/abril_fatface"
            android:text="Comidas Populares"
            android:textColor="@color/colorLetra1"
            android:textSize="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"

            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="146dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/border"

                >

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:backgroundTint="@color/white"
                    app:cardCornerRadius="8dp">

                    <ImageView
                        android:id="@+id/imagen1"
                        android:layout_marginTop="7dp"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/arrozconpollo" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/text_name_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Bandeja Paisa"
                    android:textColor="@color/colorLetra1"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/text_cost_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="$32.000"
                    android:textColor="@color/colorLetra1"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="146dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/border">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    app:cardCornerRadius="8dp">

                    <ImageView
                        android:id="@+id/imagen3"
                        android:layout_marginTop="7dp"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/empanadas" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/text_name_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Chicharron"
                    android:textColor="@color/colorLetra1"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/text_cost_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="$32.000"
                    android:textColor="@color/colorLetra1"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="146dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/border">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    app:cardCornerRadius="8dp">

                    <ImageView
                        android:id="@+id/imagen4"
                        android:layout_marginTop="7dp"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/pollofrito" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/text_name_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Patacon"
                    android:textColor="@color/colorLetra1"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/text_cost_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="$32.000"
                    android:textColor="@color/colorLetra1"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</FrameLayout>