<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomNavBar"

    >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        >

        <!-- Icono de la casita -->
        <ImageView
            android:id="@+id/homeIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_home" />

        <!-- Icono de la lupa -->
        <ImageView
            android:id="@+id/searchIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/homeIcon"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_search" />

        <!-- Icono de la bolsa de tienda -->
        <ImageView
            android:id="@+id/shoppingBagIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/searchIcon"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_shopping_bag" />

        <!-- Icono del corazÃ³n -->
        <ImageView
            android:id="@+id/heartIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/shoppingBagIcon"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_heart" />

        <!-- Icono del avatar de usuario -->
        <ImageView
            android:id="@+id/userAvatarIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_user_avatar" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>